{
  "name": "happy-hour-podcast",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "dev": "NODE_OPTIONS='--openssl-legacy-provider' next dev",
    "build": "next build && pnpm generate-sitemap && pnpm generate-rss",
    "start": "next start",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "generate-sitemap": "ts-node --compiler-options \"{ \\\"module\\\": \\\"commonjs\\\"}\" scripts/generate-sitemap.ts",
    "generate-rss": "ts-node --compiler-options \"{ \\\"module\\\": \\\"commonjs\\\"}\" scripts/generate-rss.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "audiocard": "^3.0.5",
    "next": "^15.3.4",
    "qs": "^6.14.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "@tailwindcss/typography": "0.5.16",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^24.0.4",
    "@types/qs": "^6.14.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "autoprefixer": "10.4.21",
    "critters": "^0.0.25",
    "date-fns": "^4.1.0",
    "front-matter": "^4.0.2",
    "markdown-it": "^14.1.0",
    "mp3-duration": "^1.1.0",
    "postcss": "8.5.6",
    "rss-parser": "^3.13.0",
    "tailwindcss": "3.4.17",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "xml": "^1.0.1"
  }
}
